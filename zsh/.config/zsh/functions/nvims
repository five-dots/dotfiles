readonly items=(
    "clean"
    "custom"
    "nvchad"
    "nvchad-custom"
    "nvchad-clean"
    "kickstart"
    "kickstart-clean"
)

selection=$(
    printf "%s\n" "${items[@]}" \
    | fzf \
        --prompt="Neovim Config >> " \
        --height=~50% \
        --layout=reverse \
        --border \
        --exit-0
)

eval "nvim-${selection}" $@
