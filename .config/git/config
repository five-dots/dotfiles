[core]
  editor = nvim

[user]
  email = shun.asai@tmkc.co.jp
  name = Shun Asai

[alias]
	tree = log --graph --color=always --pretty=format:'%C(yellow)%h%Creset %C(auto)%d%Creset %s %Cgreen(%cr)%Creset %C(blue)<%an>%Creset'

[credential]
  helper = cache

[init]
  defaultBranch = main

[fetch]
  prune = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[delta]
  side-by-side = true
