{
  // Editor
  "editor.foldingHighlight": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.guides.indentation": false,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 16, // 行間 (fontSize=13 の場合はデフォルトで、18)
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.scrollBeyondLastLine": false,

  // Window
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 1,

  // Workbench
  "workbench.colorTheme": "doom-one",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 16,

  // Debug
  "debug.console.fontSize": 13,

  // Explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.decorations.colors": true,

  // Terminal
  "terminal.integrated.fontSize": 13,

  // Files
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.sql": "bigquery",
    // vscode-dbt
    "**/dbtvault_test/**/*.yaml": "jinja-yaml",
    "**/dbtvault_test/**/*.yml": "jinja-yaml",
    "**/dbtvault_test/**/*.sql": "jinja-sql",
    "**/dbtvault_test/**/docs/**/*.md": "jinja-md"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/.venv/**": true
  },

  // Explorer
  "explorer.autoReveal": false,

  // Git
  "git.confirmSync": false,

  // Project Manager
  "projectManager.projectsLocation": "/home/shun/.config/Code/User",
  "projectManager.sortList": "Recent",
  "projectManager.git.baseFolders": [
    "/home/shun/Dropbox/repos/github",
    "/home/shun/Dropbox/repos/tmkc",
    "/home/shun/Dropbox/repos/unerry"
  ],

  // VSCode Neovim
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "/home/shun/.config/nvim/init.lua",

  // // Customize UI
  // "customizeUI.stylesheet": {
  //   // Let the quick pick take the full window height, so that more bindings are visible.
  //   ".quick-input-widget > .quick-input-list > .monaco-list": "max-height: 100vh !important;",
  //   // Colorize icons uniformly and add some extra padding
  //   ".quick-input-widget > .quick-input-list .codicon": "color: #83a598 !important; padding-right: 5px;",
  //   // Colorize entries starting with a `+` differently
  //   ".quick-input-widget > .quick-input-list .monaco-list-row[aria-label*=\" +\"] .label-description": "color: #8ec07c;",
  // },

  // Path Intellisense
  "path-intellisense.absolutePathToWorkspace": false,
  "path-intellisense.showHiddenFiles": true,
  "path-intellisense.mappings": {
    "~/": "/home/shun"
  },

  // Explicit Folding
  "explicitFolding.rules": {
    "*": {
      "begin": "{{{",
      "end": "}}}"
    }
  },

  // Remote
  "remote.SSH.useLocalServer": false,
  "remote.SSH.remotePlatform": {
    "user-profile-01-beaconbank-analytics": "linux",
    "anlaytics-developer-asai-01-beaconbank-analytics": "linux"
  },

  // GitHub Copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false
  },

  // Markdown
  "markdown.preview.fontSize": 13,

  // GitLens
  "gitlens.views.showRelativeDateMarkers": false,

  // JSONC
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // R
  "r.alwaysUseActiveTerminal": true,
  "r.bracketedPaste": true, // for Radian console
  "r.plot.useHttpgd": true,
  "r.rterm.linux": "/home/shun/.local/bin/radian",
  "r.session.levelOfObjectDetail": "Detailed",
  "r.sessionWatcher": true,
  "r.workspaceViewer.showObjectSize": true,

  "[r]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "REditorSupport.r",
    // "editor.formatOnSave": true,
    "explicitFolding.rules": [
      {
        "begin": "{",
        "end": "}"
      },
      {
        "begin": "(",
        "end": ")"
      }
      // {
      //   "beginRegex": "if (.*) {",
      //   "middleRegex": "} else",
      //   "endRegex": "}",
      // }
    ]
  },

  // Python
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.terminal.activateEnvironment": false, // direnv + layout_poetry で仮想環を有効にするので、false にしておく

  "[python]": {
    "files.trimTrailingWhitespace": false,
    "editor.tabSize": 4
  },

  // AREPL
  // "AREPL.defaultImports": ["from arepl_dump import dump"],

  // Notebook
  "notebook.showCellStatusBar": "hidden",

  // Jupyter
  "jupyter.enableCellCodeLens": false,
  "jupyter.askForKernelRestart": false,

  // SQL & BigQuery
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter",
    "editor.tabSize": 2,
  },
  "[jinja-sql]": {
    "editor.tabSize": 2
  },
  "[bigquery]": {
    "editor.defaultFormatter": "dr666m1.bq-extension-vscode",
    "editor.tabSize": 2,
    "explicitFolding.rules": [
      {
        "begin": "(",
        "end": ")"
      }
    ]
  },

  // BigQuery Extension for VSCode
  // "bqExtensionVSCode.formatting.printKeywordsInUpperCase": true,
  // "bqExtensionVSCode.formatting.printPseudoColumnsInUpperCase": false,
  "bqExtensionVSCode.formatting.formatMultilineComment": true,

  // Visual-BigQuery
  "visual-bigquery.hover": true,

  // BigQuery Runner
  "bigqueryRunner.keyFilename": "/home/shun/.gcp/user-profile-beaconbank-analytics.json",

  // dbt

  // Lua
  "Lua.telemetry.enable": false,
  // "Lua.diagnostics.globals": [
  //   "vim"
  // ],
  // "Lua.workspace.library": [
  //   "/usr/share/nvim/runtime/lua/vim"
  // ],

  // Terraform
  "[terraform]": {
    "editor.tabSize": 2
  },

  // Golang
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },

  // Notion
  "VSCodeNotion.accessToken": "b72db6e42b2240a02a361c3b6554776cffcc23a9e1f7ee3a0348b5c9cce17a2a8360bd8775828b441e4e2bd8174a652500072251b638b1ce879f3a002a6c78341eafe08667f91f49195df7fe863b",

  // Which Key
  "whichkey.delay": 400,
  "whichkey.bindings": [
    {
      "key": " ",
      "name": "Commands",
      "icon": "rocket",
      "type": "command",
      "command": "workbench.action.showCommands"
    },
    {
      "key": "`",
      "name": "Last buffer",
      "icon": "go-to-file",
      "type": "commands",
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
        "list.select"
      ]
    },
    {
      "key": ".",
      "name": "Repeat most recent action",
      "type": "command",
      "command": "whichkey.repeatMostRecent"
    },
    {
      "key": "!",
      "name": "Show terminal",
      "type": "command",
      "command": "workbench.action.terminal.focus"
    },
    {
      "key": "0",
      "name": "Explorer",
      "icon": "list-tree",
      "type": "command",
      "command": "workbench.files.action.focusFilesExplorer"
    },
    {
      "key": "",
      "name": "--------------------------------------------------"
    },
